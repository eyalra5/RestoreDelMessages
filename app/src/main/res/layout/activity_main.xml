<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <Button
        android:id="@+id/openSettingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Notification Access Settings" />

    <Button
        android:id="@+id/clearNotifyMessageFromDBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear notify Messages From Local DB" />

    <Button
        android:id="@+id/clearDeletedMessageFromDBButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear view Messages" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp" />
</LinearLayout>
